<div id="show-product">
  <p id="notice"><%= notice %></p>

  <p class="show-product-paragraph">
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p class="show-product-paragraph">
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p class="show-product-paragraph">
    <strong>Image url:</strong>
    <%= @product.image_url %>
  </p>

  <p class="show-product-paragraph">
    <strong>Colour:</strong>
    <%= @product.colour %>
  </p>

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>  
