<!DOCTYPE html>
<html>
<head>
  <title>Firstapp</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- navbar start -->
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Store</a>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Featured Products", static_pages_landing_path %></li>
        <li><%= link_to "About", static_pages_about_path %></li>
        <li><%= link_to "Contact", static_pages_contact_path%></li>
        <li>
          <%= form_tag("/products", method: "get", class: "navbar-form navbar-left", role: "search") do %>
            <div class="form-group">
              <%= label_tag(:q, "Search for:") %>
              <%= text_field_tag(:q, "", class: "form-control") %>
              <%= submit_tag("Search", class: "btn btn-primary") %>
            </div>
          <% end %>
        </li>
      </ul>
      <ul class="nav pull-right">
        <li id="nav-authentication">
          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          <% else %>
            <%= link_to('Login', new_user_session_path) %>
          <% end %>
        </li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav><!-- navbar end -->

<div class="container">
  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert"><%= alert %></p>
  <% end %>  

  <h1 class="global-header">Welcome to Rob's Records</h1>
  <h2>The place for vinyl collectors</h2> 
</div>

<div class="container">
<%= yield %>
</div>

<footer class="footer">
  <div class="container">
    <p class="footer-content">Rob's Records &copy; 2015</p>
  </div>
</footer> 

</body>
</html>
